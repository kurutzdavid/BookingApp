@model IEnumerable<BookingApp.Models.RezervationVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Rezervations</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RezervationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayRange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RezervationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id"> Edit</a> |
                <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>