@using Booking_app.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model BookingApp.Models.RezervationVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RezervationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RezervationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DayIn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayIn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DayOut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayOut)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DayRange)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayRange)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomID)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RoomID" />
        <input type="submit" value="Delete" class="btn btn-danger col-md-4" /> <br />
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("Administrator")) { 
                <a asp-action="Index" class="btn btn-primary btn-sm" style="margin: 2% 0 0% 0">Back to List</a>
            }
            if (User.IsInRole("User"))
            {
               <a asp-action="UserIndex" class="btn btn-primary btn-sm" style="margin: 2% 0 0% 0">Back to List</a> 
            }
        }
    </form>
</div>
